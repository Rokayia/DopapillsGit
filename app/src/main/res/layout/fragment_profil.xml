<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
     <TextView
         android:id="@+id/nom_prenom_profil"
         android:layout_width="160dp"
         android:layout_marginStart="30dp"
         android:layout_height="match_parent"
         android:textColor="@color/vertBleu"
         android:textSize="30sp"
         android:layout_marginLeft="15dp" />

        <ImageView
            android:id="@+id/imageView_avatarProfil"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/background">
        <LinearLayout
            android:id="@+id/button_identifiants"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/baseboutonprofil">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                app:srcCompat="@drawable/user"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:text="@string/identifiants_du_compte"
                android:textSize="15dp"
                android:layout_marginStart="40dp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="-12dp"
                android:clickable="true"
                android:src="@drawable/symbole34725"
                android:layout_marginLeft="-12dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_donnees_sante"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginTop="-35dp"
            android:clickable="true"
            android:background="@drawable/baseboutonprofil">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                app:srcCompat="@drawable/path"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:text="@string/donn_es_de_sant"
                android:textSize="15dp"
                android:layout_marginStart="40dp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="-12dp"
                android:clickable="true"
                android:src="@drawable/symbole34725"
                android:layout_marginLeft="-12dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_medicaments"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginTop="-35dp"
            android:clickable="true"
            android:background="@drawable/baseboutonprofil">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                app:srcCompat="@drawable/groupe344"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:text="@string/vos_m_dicaments"
                android:textSize="15dp"
                android:layout_marginStart="40dp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="-15dp"
                android:clickable="true"
                android:src="@drawable/symbole34725"
                android:layout_marginLeft="-12dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_medecin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginTop="-35dp"
            android:clickable="true"
            android:background="@drawable/baseboutonprofil">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                app:srcCompat="@drawable/medecin"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:text="@string/vos_m_decins"
                android:textSize="15dp"
                android:layout_marginStart="40dp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="-12dp"
                android:clickable="true"
                android:src="@drawable/symbole34725"
                android:layout_marginLeft="-12dp" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-45dp">


    <LinearLayout
        android:id="@+id/sign_out_button"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="150dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="@drawable/symbole2">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/out"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:text="@string/se_d_connecter"
            android:textColor="@color/blanc"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />


    </LinearLayout>
    </LinearLayout>
</LinearLayout>