<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <TextView
        android:id="@+id/modifier"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Modifier votre profil"
        android:textStyle="italic|bold"
        android:drawableLeft="@drawable/ic_perm_identity_white_24dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="194dp"
        android:background="@drawable/modifieridentifiant"
        android:foregroundGravity="center"
        android:layout_marginLeft="150dp" />
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/fondidcompte">
        <TextView
            android:id="@+id/identifiants_compte"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/identifiants_du_compte"
            android:textColor="#55BAA9"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nom_identifiantCompte"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/votre_nom"

            android:textColor="@color/common_google_signin_btn_text_light_disabled"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/identifiants_compte"/>

        <EditText
            android:id="@+id/editTextNomIdentifiantCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="none"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Name"
            android:layout_below="@+id/nom_identifiantCompte" />
        <TextView
            android:id="@+id/prenom_identifiantCompte"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:text="@string/votre_pr_nom"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/common_google_signin_btn_text_light_disabled"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/editTextNomIdentifiantCompte"/>

        <EditText
            android:id="@+id/editTextPrenomIdentifiant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Name"
            android:layout_below="@+id/prenom_identifiantCompte"/>
        <TextView
            android:id="@+id/email_identifiantCompte"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:text="@string/votre_e_mail"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/common_google_signin_btn_text_light_disabled"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/editTextPrenomIdentifiant"/>

        <EditText
            android:id="@+id/editTextEmailIdentifiant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:text="Name"
            android:layout_below="@+id/email_identifiantCompte"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/supprimer_votre_compte"
        android:textColor="#FEAB9F"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

</LinearLayout>