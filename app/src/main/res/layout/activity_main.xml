<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15px"
    android:layout_marginTop="20px"
    android:layout_marginRight="15px"
    android:layout_marginBottom="20px"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="340dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/boutonsinscrire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@drawable/logodopaills" />

    <Button
        android:id="@+id/boutonseconnecter"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="340dp"
        android:layout_height="91dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/symbole11"
        android:text="@string/seconnecter"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boutonsinscrire" />

    <Button
        android:id="@+id/boutonsinscrire"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button"
        android:layout_width="340dp"
        android:layout_height="91dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/symbole12"
        android:text="@string/creercompte"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/boutonseconnecter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <LinearLayout android:layout_height="100dp"
        android:layout_width="380dp">
        <Button
            android:id="@+id/button8"
            android:layout_width="86dp"
            android:layout_height="77dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/groupe347"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button7"
        android:layout_width="86dp"
        android:layout_height="77dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/groupe348"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="86dp"
        android:layout_height="77dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/groupe346"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

</LinearLayout>